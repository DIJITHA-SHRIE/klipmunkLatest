<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edi_text_box"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NewTopic"
        android:textSize="15sp"
        android:gravity="left"
        android:drawableRight="@drawable/ic_close_black_24dp"
        android:drawablePadding="40dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:id="@+id/newtopic_folder"
        android:clickable="true"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Topic Name"
        android:textSize="10sp"
        android:gravity="left"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="eg: Portrait Photography"
        android:textSize="10sp"
        android:gravity="left"
        android:padding="7dp"
        android:background="@drawable/edi_text_box"
        android:layout_marginTop="3dp"
        android:id="@+id/folder_topic"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="10sp"
        android:gravity="left"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What will you save here?"
        android:textSize="10sp"
        android:gravity="left"
        android:padding="7dp"
        android:background="@drawable/edi_text_box"
        android:layout_marginTop="3dp"
        android:id="@+id/folder_description"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:background="@drawable/edi_text_box"
        android:layout_marginTop="20dp"
        android:id="@+id/create_folder"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/progress_newfolder"
        android:visibility="gone"/>

</LinearLayout>